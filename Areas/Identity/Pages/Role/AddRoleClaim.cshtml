@page "/admin/role/add-roleclaim/{roleID}"
@model ProjectShopIdentity.Areas.Identity.Pages.Role.AddRoleClaimModel
@{
    ViewData["Title"] = "Gan claim";
}
<h1>@ViewData["Title"] + @Model.roles.Name</h1>
<partial name="_StatusMessage" model="@Model.StatusMessage"> </partial>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="inputModel.ClaimType" class="control-label"></label>
                <input asp-for="inputModel.ClaimType" class="form-control" />
                <span asp-validation-for="inputModel.ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="inputModel.ClaimValue" class="control-label"></label>
                <input asp-for="inputModel.ClaimValue" class="form-control" />
                <span asp-validation-for="inputModel.ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-info" asp-page="./Eit" asp-route-roleID="@Model.roles.Id">Back to List</a>
            </div>
        </form>
    </div>
</div>




@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}